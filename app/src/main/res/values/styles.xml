<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="vertical" parent="block">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="vertical.wrap" parent="wrap">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="vertical.match" parent="match">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="horizontal" parent="block">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="horizontal.match" parent="match">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="horizontal.wrap" parent="wrap">
        <item name="android:orientation">horizontal</item>
    </style>

    <!--    Text-->
    <style name="text_small" parent="block">
        <item name="android:textSize">@dimen/txt_size_14</item>
        <item name="android:gravity">center</item>
    </style>

    <!--    Images-->
    <style name="image_small">
        <item name="android:layout_width">@dimen/size_24</item>
        <item name="android:layout_height">@dimen/size_24</item>
        <item name="android:adjustViewBounds">true</item>
    </style>


    <!--    Progress bar-->
    <style name="progress">
        <item name="android:layout_width">@dimen/size_42</item>
        <item name="android:layout_height">@dimen/size_42</item>
        <item name="android:indeterminate">true</item>
    </style>

</resources>